<phpunit bootstrap="../vendor/autoload.php" colors="false">
    <testsuite name="HSSTests">
        <directory>./</directory>
    </testsuite>

    <coverage>
        <include>
            <directory>./src</directory>
        </include>
    </coverage>

    <!-- LOGGING AND CODE COVERAGE -->
    <logging>
        <log type="junit" target="../build/unit/junit.xml" logIncompleteSkipped="false" />
        <log type="coverage-clover" target="../build/coverage/clover.xml" />
        <log type="coverage-text" target="../build/coverage/clover.txt" />
        <log type="coverage-html" target="../build/coverage/clover.html" />
    </logging>
</phpunit>